<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(work) -%>">
  <span class='title'>
    <%= work.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_works_admin_work_path(work), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.works_admin_work_path(work), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: work.title)}}  ) %>
  </span>
</li>
