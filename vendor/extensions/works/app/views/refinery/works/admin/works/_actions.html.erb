<ul>
  <% if ::Refinery::Works::Admin::WorksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.works_admin_works_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_works_admin_work_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Works::Admin::WorksController.sortable? && ::Refinery::Works::Work.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.works_admin_works_path,
                     t('.reorder', what:  "Works"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.works_admin_works_path,
                      t('.reorder_done', what: "Works"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
