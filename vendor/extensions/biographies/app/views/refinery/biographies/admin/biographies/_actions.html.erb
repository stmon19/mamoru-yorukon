<ul>
  <% if ::Refinery::Biographies::Admin::BiographiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.biographies_admin_biographies_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_biographies_admin_biography_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Biographies::Admin::BiographiesController.sortable? && ::Refinery::Biographies::Biography.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.biographies_admin_biographies_path,
                     t('.reorder', what:  "Biographies"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.biographies_admin_biographies_path,
                      t('.reorder_done', what: "Biographies"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
