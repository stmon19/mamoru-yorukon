<%= form_for [refinery, :contacts_admin, @contact] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @contact,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :mail_address -%>
    <%= f.text_field :mail_address -%>
  </div>

  <div class='field'>
    <%= f.label :subject -%>
    <%= f.text_field :subject -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:message],
                :object => "contacts/contact" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.contacts.admin.contacts.contact'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @contact.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
